<tr class="japanese <%= cycle('green', 'red') %>">
  <td>
    <div class="kana">
      <%= japanese.japanese_kana unless japanese.nil? %><br />
      <span class="romaji">
        <%= japanese.japanese_romaji unless japanese.nil?%>
        <% if logged_in? -%>
          <span style="font-size: 12px">
            <%= link_to 'Edit', edit_japanese_path(japanese) %>
            <%= link_to 'Destroy', japanese_path(japanese), :method => :delete %>
          </span>
        <% end %>
      </span>
    </div>
  </td>
  <td class="swedish <%= cycle('green', 'red') %>">  
    <%= japanese.swedish unless japanese.nil? %>
  </td>
</tr>

<% 
  #throw one away
  cycle('green', 'red') 
%>